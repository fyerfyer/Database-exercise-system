{
  "testEnvironment": "node",
  "testTimeout": 30000,
  "verbose": true,
  "forceExit": true,
  "detectOpenHandles": true,
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testPathIgnorePatterns": [
    "/node_modules/"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/server.js"
  ]
}